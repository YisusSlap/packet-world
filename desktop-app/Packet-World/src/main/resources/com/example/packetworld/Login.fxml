<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="500.0" prefWidth="800.0"
            style="-fx-background-color: #F4F6F8;"
            stylesheets="@styles/estilos.css"
            xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.packetworld.controller.LoginController">

    <VBox alignment="CENTER" prefWidth="400.0" style="-fx-background-color: #89CFF0;" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.topAnchor="0.0">
        <Label text="Packet-World" textFill="WHITE">
            <font><Font name="System Bold" size="36.0" /></font>
        </Label>
        <Label text="Gestión Logística Inteligente" textFill="WHITE">
            <font><Font size="16.0" /></font>
        </Label>
    </VBox>

    <VBox alignment="CENTER" layoutX="400.0" spacing="20.0" style="-fx-background-color: WHITE;" AnchorPane.bottomAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">

        <Label text="Bienvenido" textFill="#b39cd0">
            <font><Font name="System Bold" size="28.0" /></font>
        </Label>

        <VBox maxWidth="250.0" spacing="10.0">
            <Label text="Número de Personal" textFill="#666666" />
            <TextField fx:id="txtNumPersonal" promptText="Ej. 10001" styleClass="text-field"/>
        </VBox>

        <VBox maxWidth="250.0" spacing="10.0">
            <Label text="Contraseña" textFill="#666666" />
            <PasswordField fx:id="txtPassword" styleClass="password-field"/>
        </VBox>

        <Label fx:id="lblError" textFill="RED" visible="false" />

        <Button defaultButton="true" onAction="#btnIngresarAction"
                maxWidth="250.0"
                text="Iniciar Sesión"
                styleClass="btn-primary"
                style="-fx-font-size: 14px; -fx-padding: 10 30;"/>
    </VBox>

</AnchorPane>