<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.packetworld.controller.FormularioUnidadController"
      spacing="20" style="-fx-padding: 20; -fx-background-color: white;">

    <Label fx:id="lblTitulo" text="Registrar Unidad" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #B39CD0;"/>

    <GridPane hgap="15" vgap="15">
        <Label text="Marca:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
        <TextField fx:id="txtMarca" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

        <Label text="Modelo:" GridPane.rowIndex="0" GridPane.columnIndex="2"/>
        <TextField fx:id="txtModelo" GridPane.rowIndex="0" GridPane.columnIndex="3"/>

        <Label text="Año:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
        <TextField fx:id="txtAnio" promptText="Ej. 2024" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

        <Label text="Tipo:" GridPane.rowIndex="1" GridPane.columnIndex="2"/>
        <ComboBox fx:id="cbTipo" prefWidth="150" GridPane.rowIndex="1" GridPane.columnIndex="3"/>

        <Label text="VIN:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
        <TextField fx:id="txtVin" promptText="17 Caracteres" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

        <Label text="NII (Automático):" GridPane.rowIndex="2" GridPane.columnIndex="2"/>
        <TextField fx:id="txtNii" disable="true" style="-fx-opacity: 1; -fx-background-color: #F0F0F0;"
                   GridPane.rowIndex="2" GridPane.columnIndex="3"/>
    </GridPane>

    <HBox spacing="15" alignment="CENTER_RIGHT" style="-fx-padding: 10 0 0 0;">
        <Button text="Cancelar" onAction="#btnCancelar" style="-fx-background-color: #DDD; -fx-cursor: hand;"/>
        <Button text="Guardar" onAction="#btnGuardar"
                style="-fx-background-color: #89CFF0; -fx-text-fill: white; -fx-font-weight: bold; -fx-cursor: hand;"/>
    </HBox>

</VBox>