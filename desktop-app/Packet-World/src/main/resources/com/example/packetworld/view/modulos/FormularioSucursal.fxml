<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.packetworld.controller.FormularioSucursalController"
      spacing="15"
      stylesheets="@../../styles/estilos.css"
      style="-fx-padding: 20; -fx-background-color: white;">

    <Label fx:id="lblTitulo" text="Registrar Sucursal" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #89CFF0;"/>

    <GridPane hgap="15" vgap="15">
        <Label text="Código Sucursal:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
        <TextField fx:id="txtCodigo" promptText="Ej. SUC-01" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

        <Label text="Nombre Corto:" GridPane.rowIndex="0" GridPane.columnIndex="2"/>
        <TextField fx:id="txtNombre" GridPane.rowIndex="0" GridPane.columnIndex="3"/>

        <Label text="Estado:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
        <ComboBox fx:id="cbEstado" promptText="Selecciona..." prefWidth="200" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

        <Label text="Municipio:" GridPane.rowIndex="1" GridPane.columnIndex="2"/>
        <ComboBox fx:id="cbMunicipio" promptText="Selecciona..." prefWidth="200" disable="true" GridPane.rowIndex="1" GridPane.columnIndex="3"/>

        <Label text="Código Postal:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
        <ComboBox fx:id="cbCP" promptText="Selecciona..." prefWidth="200" disable="true" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

        <Label text="Colonia:" GridPane.rowIndex="2" GridPane.columnIndex="2"/>
        <ComboBox fx:id="cbColonia" promptText="Selecciona..." prefWidth="200" disable="true" GridPane.rowIndex="2" GridPane.columnIndex="3"/>

        <Label text="Calle:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
        <TextField fx:id="txtCalle" GridPane.rowIndex="3" GridPane.columnIndex="1"/>

        <Label text="Número:" GridPane.rowIndex="3" GridPane.columnIndex="2"/>
        <TextField fx:id="txtNumero" prefWidth="100" GridPane.rowIndex="3" GridPane.columnIndex="3"/>
    </GridPane>

    <HBox spacing="15" alignment="CENTER_RIGHT" style="-fx-padding: 10 0 0 0;">
        <Button text="Cancelar" onAction="#cerrar" styleClass="button"/>

        <Button text="Guardar" onAction="#guardar" styleClass="btn-primary"/>
    </HBox>

</VBox>