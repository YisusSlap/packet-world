<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.packetworld.controller.UnidadesController"
      spacing="15" style="-fx-padding: 20;">

    <Label text="Gestión de Unidades" style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #89CFF0;"/>

    <HBox alignment="CENTER_LEFT" spacing="15">
        <TextField fx:id="txtBuscar" promptText="Buscar por VIN o Marca..." prefWidth="300"
                   style="-fx-background-radius: 20; -fx-padding: 8;"/>
        <Region HBox.hgrow="ALWAYS" />
        <Button text="+ Nueva Unidad" onAction="#btnNueva"
                style="-fx-background-color: #89CFF0; -fx-text-fill: white; -fx-font-weight: bold; -fx-cursor: hand;"/>
        <Button text="✎ Editar" onAction="#btnEditar"
                style="-fx-background-color: #B39CD0; -fx-text-fill: white; -fx-cursor: hand;"/>
        <Button text="⛔ Dar de Baja" onAction="#btnBaja"
                style="-fx-background-color: #FF8585; -fx-text-fill: white; -fx-cursor: hand;"/>
    </HBox>

    <TableView fx:id="tblUnidades" VBox.vgrow="ALWAYS">
        <columns>
            <TableColumn fx:id="colNii" text="NII (Interno)" prefWidth="120"/>
            <TableColumn fx:id="colMarca" text="Marca" prefWidth="150"/>
            <TableColumn fx:id="colModelo" text="Modelo" prefWidth="150"/>
            <TableColumn fx:id="colAnio" text="Año" prefWidth="80"/>
            <TableColumn fx:id="colVin" text="VIN" prefWidth="180"/>
            <TableColumn fx:id="colTipo" text="Tipo" prefWidth="120"/>
            <TableColumn fx:id="colEstatus" text="Estatus" prefWidth="100"/>
            <TableColumn fx:id="colConductor" text="Conductor Actual" prefWidth="150" />
        </columns>
        <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
        </columnResizePolicy>
    </TableView>
</VBox>