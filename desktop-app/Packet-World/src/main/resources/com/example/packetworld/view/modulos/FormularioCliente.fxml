<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.packetworld.controller.FormularioClienteController"
      spacing="15" style="-fx-padding: 20; -fx-background-color: white;">

    <Label fx:id="lblTitulo" text="Registrar Cliente" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #B39CD0;"/>

    <GridPane hgap="10" vgap="10">
        <Label text="Nombre:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
        <TextField fx:id="txtNombre" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

        <Label text="A. Paterno:" GridPane.rowIndex="0" GridPane.columnIndex="2"/>
        <TextField fx:id="txtPaterno" GridPane.rowIndex="0" GridPane.columnIndex="3"/>

        <Label text="A. Materno:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
        <TextField fx:id="txtMaterno" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

        <Label text="Teléfono:" GridPane.rowIndex="1" GridPane.columnIndex="2"/>
        <TextField fx:id="txtTelefono" GridPane.rowIndex="1" GridPane.columnIndex="3"/>

        <Label text="Correo:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
        <TextField fx:id="txtCorreo" GridPane.rowIndex="2" GridPane.columnIndex="1" GridPane.columnSpan="3"/>

        <Label text="DIRECCIÓN" style="-fx-font-weight: bold;" GridPane.rowIndex="3" GridPane.columnIndex="0"/>

        <Label text="Estado:" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
        <ComboBox fx:id="cbEstado" prefWidth="180" GridPane.rowIndex="4" GridPane.columnIndex="1"/>

        <Label text="Municipio:" GridPane.rowIndex="4" GridPane.columnIndex="2"/>
        <ComboBox fx:id="cbMunicipio" prefWidth="180" disable="true" GridPane.rowIndex="4" GridPane.columnIndex="3"/>

        <Label text="C. Postal:" GridPane.rowIndex="5" GridPane.columnIndex="0"/>
        <ComboBox fx:id="cbCP" prefWidth="180" disable="true" GridPane.rowIndex="5" GridPane.columnIndex="1"/>

        <Label text="Colonia:" GridPane.rowIndex="5" GridPane.columnIndex="2"/>
        <ComboBox fx:id="cbColonia" prefWidth="180" disable="true" GridPane.rowIndex="5" GridPane.columnIndex="3"/>

        <Label text="Calle:" GridPane.rowIndex="6" GridPane.columnIndex="0"/>
        <TextField fx:id="txtCalle" GridPane.rowIndex="6" GridPane.columnIndex="1"/>

        <Label text="Número:" GridPane.rowIndex="6" GridPane.columnIndex="2"/>
        <TextField fx:id="txtNumero" prefWidth="100" GridPane.rowIndex="6" GridPane.columnIndex="3"/>
    </GridPane>

    <HBox spacing="10" alignment="CENTER_RIGHT">
        <Button text="Cancelar" onAction="#cerrar"/>
        <Button text="Guardar" onAction="#guardar" style="-fx-background-color: #89CFF0; -fx-text-fill: white; -fx-font-weight: bold;"/>
    </HBox>
</VBox>