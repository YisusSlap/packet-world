<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.packetworld.controller.FormularioEstatusController"
      spacing="15"
      stylesheets="@../../styles/estilos.css"
      style="-fx-padding: 20; -fx-background-color: white; -fx-min-width: 400;">

    <Label text="Actualizar Estatus del Envío" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #B39CD0;"/>

    <GridPane hgap="10" vgap="10">
        <Label text="No. Guía:" GridPane.rowIndex="0" GridPane.columnIndex="0" style="-fx-font-weight: bold;"/>
        <Label fx:id="lblGuia" text="---" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

        <Label text="Nuevo Estatus:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
        <ComboBox fx:id="cbEstatus" promptText="Seleccione..." prefWidth="250" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

        <Label text="Comentario:" GridPane.rowIndex="2" GridPane.columnIndex="0" GridPane.valignment="TOP"/>

        <TextArea fx:id="txtComentario" prefRowCount="3" wrapText="true" promptText="Motivo del cambio o detalles..."
                  GridPane.rowIndex="2" GridPane.columnIndex="1"/>
    </GridPane>

    <Separator />

    <HBox alignment="CENTER_RIGHT" spacing="15">
        <Button text="Cancelar" onAction="#cerrar" styleClass="button"/>
        <Button text="Guardar Cambio" onAction="#guardar" styleClass="btn-primary"/>
    </HBox>

</VBox>