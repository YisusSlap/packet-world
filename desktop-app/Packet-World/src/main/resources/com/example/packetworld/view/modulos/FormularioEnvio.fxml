<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<ScrollPane fitToWidth="true"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.packetworld.controller.FormularioEnvioController"
            stylesheets="@../../styles/estilos.css"
            style="-fx-background-color: white;">

    <VBox spacing="15" style="-fx-padding: 20; -fx-background-color: white;">

        <Label text="Registrar Nuevo Envío" style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: #89CFF0;"/>

        <TitledPane text="Información General" collapsible="false" animated="false">
            <GridPane hgap="15" vgap="10">
                <Label text="Cliente Remitente:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                <ComboBox fx:id="cbCliente" promptText="Seleccione Cliente..." prefWidth="250" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

                <Label text="Sucursal Origen:" GridPane.rowIndex="0" GridPane.columnIndex="2"/>
                <TextField fx:id="txtSucursalOrigen" disable="true" text="MI SUCURSAL" GridPane.rowIndex="0" GridPane.columnIndex="3"/>

                <Label text="Nombre Destinatario:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                <TextField fx:id="txtDestNombre" promptText="Nombre" GridPane.rowIndex="1" GridPane.columnIndex="1"/>
                <TextField fx:id="txtDestAp1" promptText="Apellido P." GridPane.rowIndex="1" GridPane.columnIndex="2"/>
                <TextField fx:id="txtDestAp2" promptText="Apellido M." GridPane.rowIndex="1" GridPane.columnIndex="3"/>
            </GridPane>
        </TitledPane>

        <TitledPane text="Dirección de Destino" collapsible="false" animated="false">
            <GridPane hgap="15" vgap="10">
                <Label text="Estado:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                <ComboBox fx:id="cbEstado" prefWidth="200" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

                <Label text="Municipio:" GridPane.rowIndex="0" GridPane.columnIndex="2"/>
                <ComboBox fx:id="cbMunicipio" prefWidth="200" disable="true" GridPane.rowIndex="0" GridPane.columnIndex="3"/>

                <Label text="C. Postal:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                <ComboBox fx:id="cbCP" prefWidth="200" disable="true" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

                <Label text="Colonia:" GridPane.rowIndex="1" GridPane.columnIndex="2"/>
                <ComboBox fx:id="cbColonia" prefWidth="200" disable="true" GridPane.rowIndex="1" GridPane.columnIndex="3"/>

                <Label text="Calle y Núm:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
                <HBox spacing="5" GridPane.rowIndex="2" GridPane.columnIndex="1" GridPane.columnSpan="3">
                    <TextField fx:id="txtCalle" promptText="Calle" HBox.hgrow="ALWAYS"/>
                    <TextField fx:id="txtNumero" promptText="Num." prefWidth="80"/>
                </HBox>
            </GridPane>
        </TitledPane>

        <TitledPane text="Paquetes del Envío" collapsible="false" animated="false">
            <VBox spacing="10">
                <HBox spacing="10" alignment="CENTER_LEFT">
                    <TextField fx:id="txtPaqDesc" promptText="Descripción del contenido" HBox.hgrow="ALWAYS"/>
                    <TextField fx:id="txtPaqPeso" promptText="Peso (kg)" prefWidth="80"/>
                    <TextField fx:id="txtPaqAlto" promptText="Alto (cm)" prefWidth="70"/>
                    <TextField fx:id="txtPaqAncho" promptText="Ancho (cm)" prefWidth="70"/>
                    <TextField fx:id="txtPaqProf" promptText="Prof. (cm)" prefWidth="70"/>

                    <Button text="Agregar" onAction="#agregarPaquete" styleClass="btn-secondary"/>
                </HBox>

                <TableView fx:id="tblPaquetes" prefHeight="150">
                    <columns>
                        <TableColumn fx:id="colPaqDesc" text="Descripción" prefWidth="200"/>
                        <TableColumn fx:id="colPaqPeso" text="Peso" prefWidth="80"/>
                        <TableColumn fx:id="colPaqDimensiones" text="Dimensiones" prefWidth="150"/>
                    </columns>
                    <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                    </columnResizePolicy>
                </TableView>
            </VBox>
        </TitledPane>

        <HBox spacing="15" alignment="CENTER_RIGHT">
            <Button text="Cancelar" onAction="#cerrar" styleClass="button"/>

            <Button text="Registrar Envío" onAction="#guardarEnvio" styleClass="btn-primary"
                    style="-fx-font-size: 14px; -fx-padding: 10 30;"/>
        </HBox>

    </VBox>
</ScrollPane>